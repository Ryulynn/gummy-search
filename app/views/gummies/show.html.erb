<div class="gummy_show">
  <%= render "shared/gummy_header", gummy: @gummy %>
  <div>
    <% if @reviews == [] %>
      <p>レビューが投稿されていません</p>
    <% else %>
      <% @reviews.each_with_index do |review, i| %>
        <p id="gummy-show-review-<%= i %>">
          <%= review.comment %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
