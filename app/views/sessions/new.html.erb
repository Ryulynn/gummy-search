<div class="session_login">
  <h3>ログイン</h3>
  <div class="login_error_message">
    <%= @login_error_message %>
  </div>
  <%= form_with url: login_path do |f| %>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, value: @email %>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
    </br>
    <%= f.submit "Log in" %>
  <% end %>
  <h3>アカウントをお持ちでない方はこちら</h3>
  <%= button_to "新規登録", new_user_path, method: :get %>
</div>
